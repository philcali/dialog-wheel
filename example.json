{
    "version": "1.0.0",
    "title": "Example App",
    "properties": {
        "aspect": 20
    },
    "includes": [
        {
            "directory": "examples",
            "file": "application.sh"
        }
    ],
    "screens": {
        "Welcome": {
            "type": "msgbox",
            "properties": {
                "text": "This is some welcome text for the dialog box. Press Enter to begin."
            },
            "next": "Main Menu"
        },
        "Main Menu": {
            "type": "hub",
            "properties": {
                "items": [
                    {
                        "name": "Another",
                        "description": "Takes you to another page"
                    },
                    {
                        "name": "Happiness Level",
                        "description": "Asks if you are happy"
                    },
                    {
                        "name": "Invoke Custom",
                        "description": "Example of invoking a custom script"
                    },
                    {
                        "name": "Missing Entry",
                        "description": "Example of a custom screen missing properties"
                    }
                ]
            }
        },
        "Invoke Custom": {
            "type": "custom",
            "entrypoint": "application::example::hello_world",
            "properties": {
                "text": "This is properties sent to custom function."
            },
            "next": "Main Menu"
        },
        "Missing Entry": {
            "type": "custom",
            "properties": {
                "text": "This is properties sent to custom function."
            },
            "next": "Main Menu"
        },
        "Another": {
            "type": "msgbox",
            "title": "Another Page",
            "properties": {
                "text": "This is just another form box to demostrate things."
            },
            "next": "Main Menu"
        },
        "Happiness Level": {
            "type": "yesno",
            "title": "Happy Confirmation",
            "properties": {
                "text": "Are you happy?"
            }
        },
        "Exit": {
            "type": "yesno",
            "title": "Exit",
            "properties": {
                "text": "Are you sure you want to exit?"
            }
        }
    },
    "start": "Welcome",
    "exit": "Exit"
}