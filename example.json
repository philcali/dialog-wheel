{
    "version": "1.0.0",
    "dialog": {
        "backtitle": "Example App",
        "aspect": 20
    },
    "includes": [
        {
            "directory": "examples",
            "file": "application.sh"
        }
    ],
    "screens": {
        "Welcome": {
            "type": "msgbox",
            "dialog": {
                "ok-label": "Continue"
            },
            "properties": {
                "text": "This is some welcome text for the dialog box. Press Enter to begin."
            },
            "next": "Main Menu"
        },
        "Main Menu": {
            "type": "hub",
            "clear_history": true,
            "dialog": {
                "title": "Main Menu",
                "ok-label": "Select",
                "cancel-label": "Exit"
            },
            "properties": {
                "items": [
                    {
                        "name": "User Menu",
                        "description": "Configure this user"
                    },
                    {
                        "name": "Form Menu",
                        "description": "Place to see all of the forms"
                    },
                    {
                        "name": "Validate Menu",
                        "description": "Validate things are working"
                    },
                    {
                        "name": "Another",
                        "description": "Takes you to another page"
                    },
                    {
                        "name": "Invoke Custom",
                        "description": "Example of invoking a custom script"
                    },
                    {
                        "name": "Missing Entry",
                        "description": "Example of a custom screen missing properties"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::screens::hub::selection"
            }
        },
        "Form Menu": {
            "type": "hub",
            "clear_history": true,
            "dialog": {
                "cancel-label": "Back"
            },
            "properties": {
                "items": [
                    {
                        "name": "1 Checklist",
                        "description": "A check list that returns a list"
                    },
                    {
                        "name": "2 Checklist",
                        "description": "A check list that flips fields"
                    },
                    {
                        "name": "Radiolist",
                        "description": "A radiolist"
                    },
                    {
                        "name": "Select File",
                        "description": "Allows the ability to select a file"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::screens::hub::selection"
            },
            "back": "Main Menu"
        },
        "1 Checklist": {
            "type": "checklist",
            "dialog": {
                "title": "List Checklist"
            },
            "capture_into": "list",
            "properties": {
                "text": "Which electronics do you own?",
                "items": [
                    {
                        "name": "Phone",
                        "description": "Phone doubling as a camera / computer"
                    },
                    {
                        "name": "Tablet",
                        "description": "Like reading a book or something"
                    },
                    {
                        "name": "Laptop",
                        "description": "Computer in a lap"
                    },
                    {
                        "name": "Desktop",
                        "description": "Work in a single place"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::cancel_handler",
                "capture_into": "wheel::screens::checklist::list"
            }
        },
        "2 Checklist": {
            "type": "checklist",
            "dialog": {
                "title": "Field Checklist"
            },
            "capture_into": "electronics",
            "properties": {
                "text": "Which electronics do you own?",
                "items": [
                    {
                        "name": "Phone",
                        "description": "Phone doubling as a camera / computer",
                        "configures": "electronics.phone"
                    },
                    {
                        "name": "Tablet",
                        "description": "Like reading a book or something",
                        "configures": "electronics.tablet"
                    },
                    {
                        "name": "Laptop",
                        "description": "Computer in a lap",
                        "configures": "electronics.laptop"
                    },
                    {
                        "name": "Desktop",
                        "description": "Work in a single place",
                        "configures": "electronics.desktop"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::cancel_handler",
                "capture_into": "wheel::screens::checklist::field"
            }
        },
        "Radiolist": {
            "type": "radiolist",
            "dialog": {
                "title": "Radiolist",
                "colors": true
            },
            "capture_into": "desired",
            "properties": {
                "text": "If you could only own \\Zbone\\ZB device type, which electronic would you keep?",
                "items": [
                    {
                        "name": "Phone",
                        "description": "Phone doubling as a camera / computer"
                    },
                    {
                        "name": "Tablet",
                        "description": "Like reading a book or something"
                    },
                    {
                        "name": "Laptop",
                        "description": "Computer in a lap"
                    },
                    {
                        "name": "Desktop",
                        "description": "Work in a single place"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::cancel_handler"
            }
        },
        "Select File": {
            "type": "files",
            "capture_into": "file",
            "dialog": {
                "extra-button": true,
                "extra-label": "Reset"
            },
            "handlers": {
                "ok": "wheel::screens::files::select",
                "extra": "wheel::clear_capture_handler"
            },
            "next": "Read File",
            "back": "Form Menu"
        },
        "Read File": {
            "type": "textbox",
            "dialog": {
                "extra-button": true,
                "extra-label": "Back",
                "ok-label": "Open"
            },
            "properties": {
                "text": "$state.file"
            },
            "next": "Open File",
            "back": "Select File"
        },
        "Open File": {
            "type": "editor",
            "dialog": {
                "ok-label": "Save",
                "cancel-label": "Close"
            },
            "properties": {
                "text": "$state.file"
            },
            "handlers": {
                "ok": "wheel::screens::editor::save"
            },
            "next": "Read File",
            "back": "Read File"
        },
        "User Menu": {
            "type": "hub",
            "clear_history": true,
            "dialog": {
                "cancel-label": "Back"
            },
            "properties": {
                "items": [
                    {
                        "name": "Name",
                        "required": true,
                        "configures": "name"
                    },
                    {
                        "name": "Password",
                        "required": true,
                        "configures": "password"
                    },
                    {
                        "name": "Birthday",
                        "configures": "birthday"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::screens::hub::selection"
            },
            "back": "Main Menu"
        },
        "Password": {
            "type": "password",
            "dialog": {
                "insecure": true
            },
            "capture_into": "password",
            "properties": {
                "text": "Enter your password"
            },
            "next": "User Menu"
        },
        "Name": {
            "type": "input",
            "capture_into": "name",
            "properties": {
                "text": "Enter your name"
            },
            "next": "User Menu"
        },
        "Birthday": {
            "type": "calendar",
            "capture_into": "birthday",
            "properties": {
                "text": "Select your birth date"
            },
            "next": "User Menu"
        },
        "Validate Menu": {
            "type": "hub",
            "dialog": {
                "cancel-label": "Back"
            },
            "clear_history": true,
            "properties": {
                "items": [
                    {
                        "name": "Validate",
                        "description": "Run an external gauge program"
                    },
                    {
                        "name": "Validate Managed",
                        "description": "Run a managed gauge program"
                    },
                    {
                        "name": "Validate Managed Simple",
                        "description": "Run a simple gauge program"
                    }
                ]
            },
            "handlers": {
                "ok": "wheel::screens::hub::selection"
            },
            "back": "Main Menu"
        },
        "Validate": {
            "type": "gauge",
            "dialog": {
                "title": "Validating"
            },
            "properties": {
                "text": "Starting the validation process. Please be patient",
                "width": 70,
                "actions": [
                    "application::example::validate"
                ]
            },
            "next":"Validation Result"
        },
        "Validate Managed": {
            "type": "gauge",
            "managed": true,
            "output_to": "validation.log",
            "dialog": {
                "title": "Validating"
            },
            "properties": {
                "width": 70,
                "actions": [
                    {
                        "label": "Testing the device storage...",
                        "action": "application::example::step"
                    },
                    {
                        "label": "Testing the device compute...",
                        "action": "application::example::step"
                    },
                    {
                        "label": "Testing the device network...",
                        "action": "application::example::step_failure"
                    },
                    {
                        "label": "Testing authentication...",
                        "action": "application::example::step"
                    },
                    {
                        "label": "Testing authorization...",
                        "action": "application::example::step"
                    }
                ]
            },
            "next": "Validation Result"
        },
        "Validate Managed Simple": {
            "type": "gauge",
            "managed": true,
            "dialog": {
                "title": "Validating"
            },
            "properties": {
                "width": 70,
                "actions": [
                    "application::example::step_one",
                    "application::example::step_two",
                    "application::example::step_three",
                    "application::example::step_four",
                    "application::example::step_five"
                ]
            },
            "next": "Validation Result"
        },
        "Validation Result": {
            "type": "msgbox",
            "dialog": {
                "ok-label": "Back"
            },
            "properties": {
                "text": "Validation complete! Things look great!"
            },
            "next": "Validate Menu"
        },
        "Invoke Custom": {
            "type": "custom",
            "entrypoint": "application::example::hello_world",
            "properties": {
                "text": "This is properties sent to custom function."
            },
            "next": "Main Menu"
        },
        "Missing Entry": {
            "type": "custom",
            "properties": {
                "text": "This is properties sent to custom function."
            },
            "next": "Main Menu"
        },
        "Another": {
            "type": "msgbox",
            "dialog": {
                "title": "Another Page"
            },
            "properties": {
                "text": "This is just another form box to demostrate things."
            },
            "next": "Main Menu"
        },
        "Exit": {
            "type": "yesno",
            "dialog": {
                "erase-on-exit": true
            },
            "properties": {
                "text": "Are you sure you want to exit?"
            }
        },
        "Error": {
            "type": "msgbox",
            "dialog": {
                "ok-label": "Back"
            },
            "properties": {
                "text": "An unexpected error has occurred.\nPlease reach out to support.",
                "width": 50,
                "height": 7
            },
            "handlers": {
                "ok": "wheel::cancel_handler"
            }
        }
    },
    "start": "Welcome",
    "exit": "Exit",
    "error": "Error"
}