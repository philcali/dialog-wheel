{
    "version": "1.0.0",
    "title": "Example App",
    "properties": {
        "aspect": 20
    },
    "includes": [
        {
            "directory": "examples",
            "file": "application.sh"
        }
    ],
    "screens": {
        "Welcome": {
            "type": "msgbox",
            "dialog": {
                "ok-label": "Continue"
            },
            "properties": {
                "text": "This is some welcome text for the dialog box. Press Enter to begin."
            },
            "next": "Main Menu"
        },
        "Main Menu": {
            "type": "hub",
            "clear_history": true,
            "dialog": {
                "title": "Main Menu",
                "ok-label": "Select",
                "cancel-label": "Exit"
            },
            "properties": {
                "items": [
                    {
                        "name": "User Menu",
                        "description": "Configure this user"
                    },
                    {
                        "name": "Another",
                        "description": "Takes you to another page"
                    },
                    {
                        "name": "Happiness Level",
                        "description": "Asks if you are happy"
                    },
                    {
                        "name": "Invoke Custom",
                        "description": "Example of invoking a custom script"
                    },
                    {
                        "name": "Missing Entry",
                        "description": "Example of a custom screen missing properties"
                    }
                ]
            }
        },
        "User Menu": {
            "type": "hub",
            "clear_history": true,
            "dialog": {
                "cancel-label": "Back"
            },
            "properties": {
                "items": [
                    {
                        "name": "Name",
                        "required": true,
                        "configures": "name"
                    },
                    {
                        "name": "Password",
                        "required": true,
                        "configures": "password"
                    },
                    {
                        "name": "Birthday",
                        "configures": "birthday"
                    }
                ]
            },
            "back": "Main Menu"
        },
        "Password": {
            "type": "password",
            "dialog": {
                "insecure": true
            },
            "capture_into": "password",
            "properties": {
                "text": "Enter your password"
            },
            "next": "User Menu"
        },
        "Name": {
            "type": "input",
            "capture_into": "name",
            "properties": {
                "text": "Enter your name"
            },
            "next": "User Menu"
        },
        "Birthday": {
            "type": "calendar",
            "capture_into": "birthday",
            "properties": {
                "text": "Select your birth date"
            },
            "next": "User Menu"
        },
        "Invoke Custom": {
            "type": "custom",
            "entrypoint": "application::example::hello_world",
            "properties": {
                "text": "This is properties sent to custom function."
            },
            "next": "Main Menu"
        },
        "Missing Entry": {
            "type": "custom",
            "properties": {
                "text": "This is properties sent to custom function."
            },
            "next": "Main Menu"
        },
        "Another": {
            "type": "msgbox",
            "dialog": {
                "title": "Another Page"
            },
            "properties": {
                "text": "This is just another form box to demostrate things."
            },
            "next": "Main Menu"
        },
        "Happiness Level": {
            "type": "yesno",
            "dialog": {
                "title": "Happy Confirmation"
            },
            "properties": {
                "text": "Are you happy?"
            }
        },
        "Exit": {
            "type": "yesno",
            "properties": {
                "text": "Are you sure you want to exit?"
            }
        }
    },
    "start": "Welcome",
    "exit": "Exit"
}